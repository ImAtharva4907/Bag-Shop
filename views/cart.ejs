<%- include('./partials/header') %>
<div class="w-full min-h-screen bg-gray-50 py-10">
  <% user.cart.forEach(function(item) { %>
    <div class="max-w-6xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row">
      <!-- Product Image Section -->
      <div class="w-full md:w-1/3 p-6 bg-[<%= item.bgcolor %>] flex items-center justify-center">
        <img class="max-h-80 object-contain" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
      </div>

      <!-- Product Details Section -->
      <div class="w-full md:w-2/3 p-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= item.name %></h2>

        <!-- Quantity Selector -->
        <div class="flex items-center gap-4 mb-6">
          <button class="w-10 h-10 flex items-center justify-center bg-gray-100 rounded-full hover:bg-gray-200 transition-colors">
            <i class="ri-subtract-line text-lg"></i>
          </button>
          <span class="text-lg font-medium">01</span>
          <button class="w-10 h-10 flex items-center justify-center bg-gray-100 rounded-full hover:bg-gray-200 transition-colors">
            <i class="ri-add-line text-lg"></i>
          </button>
        </div>

        <!-- Price Breakdown -->
        <div class="space-y-4 mb-6">
          <div class="flex justify-between">
            <span class="text-gray-600">Total MRP</span>
            <span class="font-medium">₹ <%= Number(item.price) %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Discount on MRP</span>
            <span class="text-green-600">- ₹ <%= item.discount %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Platform Fee</span>
            <span class="font-medium">₹ 20</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Shipping Fee</span>
            <span class="text-green-600">FREE</span>
          </div>
        </div>

        <!-- Divider -->
        <div class="w-full h-px bg-gray-200 my-6"></div>

        <!-- Total Amount -->
        <div class="flex justify-between items-center">
          <span class="text-xl font-bold text-gray-800">Total Amount</span>
          <span class="text-2xl font-bold text-green-600">₹ <%= bill %></span>
        </div>

        <!-- Checkout Button -->
        <button class="w-full mt-8 py-3 bg-black text-white rounded-lg hover:bg-gray-900 transition-colors">
          Proceed to Checkout
        </button>
      </div>
    </div>
  <% }) %>
</div>
<%- include('./partials/footer') %>